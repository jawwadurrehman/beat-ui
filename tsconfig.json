{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "CommonJS",
    "target": "ES6",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "jsx": "react-jsx",
    "outDir": "lib",
    "declaration": true
  },
  "include": ["src"]
}
